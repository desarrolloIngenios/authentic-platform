FROM --platform=linux/amd64 php:8.2-fpm

# Set working directory
WORKDIR /var/www

# Instalador de extensiones PHP
ADD https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/
RUN chmod +x /usr/local/bin/install-php-extensions && sync && \
    install-php-extensions mbstring pdo_mysql zip exif pcntl gd bcmath intl

# Dependencias del sistema
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    curl \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    libz-dev \
    supervisor \
    nginx \
    cron \
    mariadb-client-compat \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Instalar Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer



# Copiar composer.json y composer.lock
COPY composer.json composer.lock ./

#  Instalar dependencias Laravel con m谩s detalle y sin l铆mite de memoria
RUN COMPOSER_MEMORY_LIMIT=-1 composer install --no-interaction --no-plugins --no-scripts --prefer-dist --optimize-autoloader --no-dev || \
    (cat /var/www/composer.json && cat /var/www/composer.lock && exit 1)

# Copiar el resto del c贸digo
COPY --chown=www-data:www-data . /var/www

# Permisos
RUN chmod -R ug+w /var/www/storage /var/www/bootstrap/cache

# Configuraci贸n
RUN cp docker/supervisor.conf /etc/supervisord.conf
RUN cp docker/php.ini /usr/local/etc/php/conf.d/app.ini
RUN cp docker/nginx.conf /etc/nginx/sites-enabled/default

# Logs supervisord y PHP, y permisos para /var/run
RUN mkdir -p /var/log/php /var/log /var/run && \
    touch /var/log/php/errors.log /var/log/supervisord.log /var/run/supervisord.pid && \
    chmod 777 /var/log/php/errors.log /var/log/supervisord.log /var/run/supervisord.pid && \
    chown www-data:www-data /var/log/supervisord.log /var/run /var/run/supervisord.pid

# Cron Laravel
RUN echo '* * * * * cd /var/www && php artisan schedule:run >> /dev/null 2>&1' > /etc/cron.d/laravel-cron \
    && chmod 0644 /etc/cron.d/laravel-cron \
    && crontab /etc/cron.d/laravel-cron



# Garantiza que los directorios de storage y views existen y tienen permisos correctos
RUN mkdir -p \
    /var/www/storage/framework/views \
    /var/www/storage/framework/cache/data \
    /var/www/storage/framework/sessions \
    /var/www/bootstrap/cache \
    /var/www/.config/psysh && \
    find /var/www/storage -type d -exec chmod 775 {} \; && \
    find /var/www/storage -type f -exec chmod 664 {} \; && \
    chown -R www-data:www-data /var/www/storage /var/www/bootstrap/cache /var/www/.config && \
    chmod -R 775 /var/www/bootstrap/ /var/www/.config && \
    chmod -R 0777 /var/www/storage

# Crear directorios de logs para nginx y supervisord
RUN mkdir -p /var/log/nginx /var/log/supervisor /var/log/php && \
    touch /var/log/nginx/access.log /var/log/nginx/error.log && \
    touch /var/log/supervisor/supervisord.log && \
    touch /var/log/php/errors.log && \
    chown -R www-data:www-data /var/log/nginx /var/log/supervisor /var/log/php && \
    chmod -R 775 /var/log/nginx /var/log/supervisor /var/log/php

# Agrega estas l铆neas para la optimizaci贸n de producci贸n
# Skip cache durante build - se ejecutar谩 en runtime
# RUN php artisan config:cache
# RUN php artisan route:cache
# RUN php artisan view:cache

EXPOSE 80

ENTRYPOINT ["bash", "/var/www/docker/run.sh"]



